@section metaSEO {
    <title>Inicio - @ViewBag.nameAgency</title>
    <meta name="description" content="ViajaYa es una agencia de viajes caracterizada por el buen servicio y oferta de productos turisticos de calidad en diversos destinos, estamos comprometidos con cumplir los sueños de viaje de nuestros clientes.">
    <meta name="keywords" content="Angencias, Angencia viajes, Viajes, Tours, Niños, Adultos, Experiencias, Visitas, Paquetes Turisticos, Turismo, Vuelos, Ciudades, Lugares, Residencias, Hoteles, Playas, ViajaYa">
}


<!-- main-slider-start -->
<section class="main-slider-one">
  <div class="main-slider-one__carousel trevlo-owl__carousel owl-carousel owl-theme" data-owl-options='{
		"items": 1,
		"margin": 0,
		"loop": true,
		"smartSpeed": 700,
		"animateOut": "fadeOut",
		"autoplayTimeout": 5000, 
		"nav": true,
		"navText": ["<span class=\"icon-left-arrow\"></span>","<span class=\"icon-right-arrow\"></span>"],
		"dots": false,
		"autoplay": true
		}'>
    @foreach (var slider in ViewBag.slider) {
    <div class="item">
      <div class="main-slider-one__image" style="background-image: url(@(ViewBag.urlImage)@(slider.image));"></div>
      <div class="container">
        <div class="main-slider-one__content">
          <h5 class="main-slider-one__sub-title">Descrube y <img src="assets/images/shapes/slider-1-shape-1.png" alt="trevlo"></h5>
          <h3 class="main-slider-one__title">Explora el mundo <img src="assets/images/shapes/slider-1-shape-2.png" alt="trevlo"></h3>
        </div>
      </div>
    </div>
    }
  </div><!-- banner-slider -->
  
</section>
<!-- main-slider-end -->

<!-- Tour Listing One Start -->
@if (ViewBag.countPopular > 0) {
<section class="tour-listing-one" style="background-image: url(assets/images/backgrounds/tour-bg-1.jpg);">
  <div class="container">
    <div class="sec-title text-center">


      <p class="sec-title__tagline">Los @ViewBag.countPopular más destacados</p>


      <h2 class="sec-title__title">Experiencias populares</h2><!-- /.sec-title__title -->
    </div><!-- /.sec-title --><!-- /.sec-title -->
    <div class="tour-listing-one__carousel trevlo-owl__carousel trevlo-owl__carousel--basic-nav trevlo-owl__carousel--with-shadow owl-theme owl-carousel" data-owl-options='{
            "items": 3,
            "margin": 30,
            "smartSpeed": 700,
            "loop":false,
            "autoplay": 6000,
            "nav":false,
            "dots":true,
            "navText": ["<span class=\"fa fa-angle-left\"></span>","<span class=\"fa fa-angle-right\"></span>"],
            "responsive":{
                "0":{
                    "items": 1
                },
                "768":{
                    "items": 2
                },
                "1200":{
                    "items": 3
                }
            }
            }'>

      @foreach (var popular in ViewBag.popularTours) {
      <div class="item" style="height: 100%;">
        <div class="tour-listing__card" style="height: 100%;">
          <a href="@popular.url" class="tour-listing__card-image-box">
            <img src="@(ViewBag.urlImage)@(popular.image)" class="tour-listing__card-image correcion-pedrito-32">
            <div class="tour-listing__card-image-overlay"></div><!-- /.tour-listing__card-image-overlay -->
          </a><!-- /.tour-listing__card-image-box -->
          <div class="tour-listing__card-content">
            <h3 class="tour-listing__card-title webkit-line-2 text-break"><a href="@popular.url">@popular.title</a></h3>
            <p class="tour-listing__card-text text-small webkit-line-2">@popular.description</p>
            <p class="tour-listing__card-text text-small"></p>
            <div class="tour-listing__card-inner-content">
              <div class="tour-listing__card-location-box">
                <span class="icon-location-1"></span>
                <p class="tour-listing__card-location-text text-small">Duración @popular.duration</p>
              </div><!-- /.tour-listing__card-location-box -->
              <div class="tour-listing__card-divider"></div><!-- /.tour-listing__card-divider -->
              <div class="tour-listing__card-bottom">
                <div class="tour-listing__card-bottom-right">
                  <h4 class="tour-listing__card-price">$ 000 MXN</h4>
                </div><!-- /.tour-listing__card-bottom-right -->
              </div><!-- /.tour-listing__card-bottom -->
            </div><!-- /.tour-listing__card-inner-content -->
            <div class="text-center mt-3">
              <a href="@popular.url" class="btn btn-primary"><i class="fas fa-hand-point-up me-1"></i> Reservar</a>
            </div>
          </div><!-- /.tour-listing__card-content -->
        </div><!-- /.tour-listing__card -->
      </div><!-- /.item -->
      }

    </div><!-- /.tour-listing-one__carousel -->
  </div><!-- /.container -->
</section>
}


